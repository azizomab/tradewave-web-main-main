{% extends 'base.html.twig' %}


{% block body %}
   
    
<div class="row match-height">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Media</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr>
                                <th class="border-top-0">Type</th>
                                <th class="border-top-0">Description</th>
                                <th class="border-top-0">Image</th>
                                <th class="border-top-0">Publicite</th>
                                <th class="border-top-0">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for medium in media %}
                            <tr>
                                <td class="text-truncate"><i class="la la-dot-circle-o success font-medium-1 mr-1"></i> {{ medium.type }}</td>
                                <td class="text-truncate">{{ medium.description }}</td>
                                <td class="text-truncate">
                                    <img src="{{asset(medium.imagePath)}}" alt="" width="80px">
                                </td>
                                <td class="text-truncate">{{ medium.publicite }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {{ include('media/_delete_form.html.twig') }}
                                        <div style="position: relative;left:30px;">
                                        <a href="{{ path('app_media_edit', {'id': medium.id}) }}" class="btn btn-outline-success">edit</a>
                                        </div>
                                    </div>
                                    
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_media_new') }}" class="btn btn-outline-success">Create new</a>

            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
{% endblock %}
