{% extends 'base.html.twig' %}


{% block body %}
   
<div class="row match-height">
    <div id="recent-transactions" class="col-12">
        <h6 class="my-2">Publicites</h6>
        <div class="card">
            <div class="card-content">
                <div class="table-responsive">
                    <table id="recent-orders" class="table table-hover table-xl mb-0">
                        <thead>
                            <tr>
                                <th class="border-top-0">TypePub</th>
                                <th class="border-top-0">DatePub</th>
                                <th class="border-top-0">Duration</th>
                                <th class="border-top-0">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for publicite in publicites %}
                            <tr>
                                <td class="text-truncate"><i class="la la-dot-circle-o success font-medium-1 mr-1"></i> {{ publicite.typePub }}</td>
                                <td class="text-truncate"><a href="#">{{ publicite.datePub ? publicite.datePub|date('Y-m-d') : '' }}</a></td>
                                <td class="text-truncate">
                                    <a href="#" class="mb-0 btn-sm btn btn-outline-success round">{{ publicite.duration }}</a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {{ include('publicite/_delete_form.html.twig') }}
                                        <div style="position: relative;left:30px;">
                                        <a href="{{ path('app_publicite_edit', {'id': publicite.id}) }}" class="btn btn-outline-success">edit</a>
                                        </div>
                                    </div>
                                    
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_publicite_new') }}" class="btn btn-outline-success">Create new</a>

            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
{% endblock %}
